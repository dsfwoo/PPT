
<h1>看板</h1>

<%= link_to '新增看板', new_board_path %>

<ul>
  <% @boards.each do |board| %>
    <li>
      <%= link_to board.title, board_path(board.id) %>
      <%= link_to '編輯', edit_board_path(board.id) %>
      <%= link_to '刪除', board_path(board.id), method: 'delete', data: {confirm: 'are you sure?'} %>
    </li>
  <% end %>
</ul>
