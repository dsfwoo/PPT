<h1>Add Post</h1>

<% if @post.errors.any? %>
<ul>
  <% @post.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_with(model: @post, url: board_posts_path) do |form| %>
<div>
  <%= form.label :title, '標題' %>
  <%= form.text_field :title %>
</div>
<div>
  <%= form.label :content, '內文' %>
  <%= form.text_area :content %>
</div>
<%= form.submit %>


<% end %>
